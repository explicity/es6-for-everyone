{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "outDir": "/",
    "downlevelIteration": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"]
}
